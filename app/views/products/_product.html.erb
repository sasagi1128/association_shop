<div id="<%= dom_id product %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Title:</strong>
    <%= product.title %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Price cents:</strong>
    <%= product.price_cents %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Description:</strong>
    <%= product.description %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Stock:</strong>
    <%= product.stock %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Shop:</strong>
    <%= product.shop_id %>
  </div>
</div>
